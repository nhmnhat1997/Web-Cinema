<!DOCTYPE html>
<%- layout('../share/layout') %>

    <style>
        input:read-only {
            background-color: white
        }
    </style>

    <link rel="stylesheet" href="/stylesheets/film/create.css">
    <div class="my-header-page">
        <div class="my-top-header-text">
            <h1> Cinema Website </h1>
        </div>
    </div>

    <div class="loader"></div>

    <nav class="navbar navbar-default navbar-custom" ng-controller="createController">
        <div class="container my-containter-full">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="/">
                    <i class="fa fa-home" aria-hidden="true"></i>
                </a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse-1">
                    <ul class="nav navbar-nav nav-left">
                            <li class="ng-binding ng-show" ng-show="user._id" ng-cloak>
                                <a href="/user/{{user._id}}">
                                <i class="fa fa-user fa-lg" aria-hidden="true"></i> Thông tin người dùng</a>
                            </li>
                        </ul>
                    <ul class="nav navbar-nav navbar-right">
                            <li  ng-show="user._id" ng-click="clickSignOut()" style="cursor: pointer" ng-cloak>
                                <a>
                                <i class="fa fa-power-off fa-lg" aria-hidden="true"></i> Đăng xuất </a>
                            </li>
                        </ul>
            </div>
        </div>
    </nav>

    <div>
    </div>





    <div ng-controller="createController">
        <p class="hide" id="film-id"><%= filmId %></p>
        <p class="hide" id="user-id"><%= userId %></p>
        <div class="modal" tabindex="-1" role="dialog" id="SuccessDialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Thông báo</h5>
                    </div>
                    <div class="modal-body">
                        <p>{{ notiMessage }}</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" ng-click="goBackHome()">OK</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="container my-container-center my-title-header">
            <h1> {{ formTitle }} </h1>
        </div>

        <div class="container my-create-film">
            <form role="form">
                <div class="container col-sm-12 col-md-5 my-upload-image text-center animated fadeIn">
                    <a href="" ng-click="clickUploadImage()">
                        <img id="imageFilm" name="imageFilm" src="/images/image.jpeg">
                    </a>
                    <input type="file" style="display:none" id="fileInput" name="fileInput" accept="image/*" onchange="readURL(this)">

                    <button type="button" class="btn btn-primary my-btn text-center" ng-click="clickUploadImage()">
                        <i class="fa fa-file-image-o fa-lg" aria-hidden="true"></i>
                        Chọn hình minh họa
                    </button>
                </div>

                <div class="container col-sm-12 col-md-7 my-form-film animated flipInX">
                    <div class="form-group">
                        <h4>Tên bộ phim:</h4>
                        <input class="form-control my-input-film" type="text" id="filmName" ng-model="filmName" placeholder="Tên bộ phim">
                    </div>

                    <div class="form-group">
                        <h4>Thể loại phim:</h4>
                        <select ng-options="genre for genre in listGenreFilms" ng-model="filmGenre" class="my-input-film col-md-12 col-sm-12 col-lg-12 col-xs-12 my-select-film"
                            id="filmGenre">
                        </select>
                    </div>

                    <div class="form-group">
                        <h4> Thời gian phát hành: </h4>
                        <input type="text" class="form-control disabled" id="datePicker" readonly>
                    </div>

                    <div class="form-group">
                        <h4> Nội dung mô tả:</h4>
                        <textarea class="form-control col-sm-12 col-md-12 my-input-film" id="filmContent" rows="5" placeholder="Điền thông tin thêm về bộ phim, như diễn viên chính, nội dung bộ phim,..."
                            ng-model="filmContent"></textarea>
                    </div>
                </div>

                <div class="container my-container-right my-bot-form">
                    <button type="submit" class="btn btn-primary my-btn text-center animated slideInUp" ng-click="clickUploadFilm()" style="margin-right:15px">
                        <i class="fa fa-upload fa-lg" aria-hidden="true"></i>
                        {{ buttonTitle }}
                    </button>
                </div>
            </form>

        </div>
    </div>
    <script src="/javascripts/film/createFilm.js"></script>