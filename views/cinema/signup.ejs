<!DOCTYPE html>
<%- layout('../share/layout') %>

    <link rel="stylesheet" href="/stylesheets/film/create.css">
    <div class="my-header-page">
        <div class="my-top-header-text">
            <h1> Cinema Website </h1>
        </div>
    </div>

    <div class="loader"></div>

    <nav class="navbar navbar-default navbar-custom">
        <div class="container my-containter-full">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="/">
                    <i class="fa fa-home" aria-hidden="true"></i>
                </a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse-1">
            </div>
        </div>
    </nav>

    <div>
    </div>





    <div ng-controller="createController">

        <div class="container my-container-center my-title-header">
            <h1> Đăng ký </h1>
        </div>

        <div class="container my-create-film">
            <form role="form">
                <div class="container my-form-signup animated flipInX">
                    <div class="form-group">
                        <h4>Tên người dùng:</h4>
                        <input class="form-control my-input-film" type="text" id="user-name" placeholder="Tên người dùng">
                    </div>

                    <div class="form-group">
                        <h4>Email:</h4>
                        <input class="form-control my-input-film" type="text" id="email" placeholder="Email">
                    </div>

                    <div class="form-group">
                        <h4> Mật khẩu: </h4>
                        <input type="password" class="form-control my-input-film" id="password" placeholder="Mật khẩu">
                    </div>

                    <div class="form-group">
                        <h4> Nhập lại mật khẩu:</h4>
                        <input type="password" class="form-control my-input-film" id="re-enter-password" placeholder="Nhập lại mật khẩu">
                    </div>
                </div>

                <div class="container my-container-center my-bot-form">
                    <button type="submit" class="btn btn-primary my-btn text-center animated slideInUp" style="margin-right:15px">
                        <i class="fa fa-user-plus fa-lg" aria-hidden="true"></i>
                        Tạo tài khoản
                    </button>
                </div>
            </form>

        </div>
    </div>
    <script src="/javascripts/film/createFilm.js"></script>